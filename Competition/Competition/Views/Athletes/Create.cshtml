@model Competition.ViewModels.Athletes.CreateVM
@using Competition.Entities;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Site.cshtml";
}

<fieldset>
    <legend>Create Athlete</legend>

    <form action="/Athletes/Create" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">
                    <b> @Html.LabelFor(a => a.Name) </b>
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(a => a.Name)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(a => a.Name)
                </div>
                @*<div class="col-1">
                @Html.LabelFor(a => a.Country)
            </div>
