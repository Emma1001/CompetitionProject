            </div>
            <div class="col-2">
                @Html.ValidationMessageFor(a => a.Country)
            </div>*@
                <div class="col-1">
                    <b>@Html.Label("Country:") </b>
                </div>
                <select name="teamId">
                    @foreach (var item in (List<Team>)ViewData["teams"])
                    {
                        <option value="@item.Id">
                            @item.Country
                        </option>
                    }
                </select>

            </div>

            <div class="row">
                <div class="col-3">
                    <input class="right" type="submit" value="Save" />
                </div>
